{
  "name": "Scrullo",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Makes it easier to manage scrum in Trello",
  "permissions": [
    "https://*/*",
    "notifications"
  ],
  "content_scripts" : [
    {
     "matches" : ["https://trello.com/*"],
     "css" : ["src/css/style.css"],
     "js" : ["lib/jquery.js", "lib/system.js", "src/js/scrullo.js"]
    }
  ],
  "web_accessible_resources": [
    "resources/images/exit-btn.png"
  ]
}